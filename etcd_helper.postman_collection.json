{
	"info": {
		"_postman_id": "etcd-helper-api",
		"name": "Etcd Helper API",
		"description": "Collection for testing the Etcd Helper Node.js service.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get Key",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/kv/:key",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"kv",
						":key"
					],
					"variable": [
						{
							"key": "key",
							"value": "test_key",
							"description": "The key to retrieve"
						}
					]
				},
				"description": "Retrieve a value from etcd by its key."
			},
			"response": []
		},
		{
			"name": "Set Key",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"key\": \"test_key\",\n    \"value\": \"test_value\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/kv",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"kv"
					]
				},
				"description": "Create or update a key-value pair in etcd."
			},
			"response": []
		},
		{
			"name": "Delete Key",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{base_url}}/kv/:key",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"kv",
						":key"
					],
					"variable": [
						{
							"key": "key",
							"value": "test_key",
							"description": "The key to delete"
						}
					]
				},
				"description": "Delete a key from etcd."
			},
			"response": []
		},
		{
			"name": "List All Keys",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/kv",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"kv"
					]
				},
				"description": "List all keys stored in etcd."
			},
			"response": []
		},
		{
			"name": "Clear All Keys",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{base_url}}/kv?secret=my_secure_secret",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"kv"
					],
					"query": [
						{
							"key": "secret",
							"value": "my_secure_secret",
							"description": "Admin secret required to clear all keys"
						}
					]
				},
				"description": "Clear all keys from etcd (Requires ADMIN_SECRET)."
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:5001",
			"type": "string"
		}
	]
}
